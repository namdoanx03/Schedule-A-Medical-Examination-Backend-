<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
</head>
<style>
    table,
    th,
    td {
        border: 1px solid black;
        border-collapse: collapse;
    }



    .btn-edit {
        background: orange;
        border: none;
        height: 25px;
        outline: none;
        width: 60px;
        border-radius: 3px;
        cursor: pointer;
    }

    .btn-delete {
        background: red;
        border: none;
        height: 25px;
        outline: none;
        width: 60px;
        cursor: pointer;
    }
</style>

<body>

    <table style="width:100%">
        <tr>
            <th>Email</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Address</th>
            <th>Action</th>
            <% for(let i=0; i < dataTable.length; i++) { %>
        <tr>
            <td>
                <%= dataTable[i].email %>
            </td>
            <td>
                <%= dataTable[i].firstName %>
            </td>
            <td>
                <%= dataTable[i].lastName %>
            </td>
            <td>
                <%= dataTable[i].address %>
            </td>
            <td>
                <a href="/edit-crud?id=<%= dataTable[i].id %>" class="btn-edit" type="button">Edit</a>
                <a class="btn-delete" type="button">Delete</a>
            </td>
        </tr>
        <% } %>
    </table>

</body>

</html>